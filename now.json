{
  "github": {
    "silent": true
  },
  "routes": [
    {
      "src": "/api/og(.*)",
      "dest": "/api/og$1",
      "headers": {
        "Cache-Control": "max-age=31536000, public, stale-while-revalidate",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
      }
    },
    {
      "src": "/animate(.*)",
      "status": 308,
      "headers": { "Location": "https://animate.style/" }
    },
    {
      "src": "/toast(.*)",
      "status": 308,
      "headers": { "Location": "https://daneden.github.io/Toast/" }
    },
    {
      "src": "/images/favicon(.*)",
      "dest": "/images/favicon.png"
    },
    {
      "src": "/uploads/(.*)",
      "headers": { "cache-control": "s-maxage=31536000" },
      "dest": "/uploads/$1"
    },
    { "src": "/feed.xml", "dest": "/rss.xml" },
    { "src": "/(.*)", "dest": "/$1" },
    { "handle": "filesystem" },
    {
      "src": "/fonts/(.*(woff2?|eot))",
      "headers": { "cache-control": "s-maxage=31536000" },
      "dest": "/fonts/$1"
    },
    {
      "src": "/paintWorklet.js",
      "headers": { "cache-control": "s-maxage=1, stale-while-revalidate" },
      "dest": "/paintWorklet.js"
    },
    {
      "src": "/((blog/)?([0-9]{4}/)([0-9]{1,2}/){0,2}(.*))",
      "status": 308,
      "headers": { "Location": "/blog/$3$5" }
    },
    { "src": "/.*", "status": 404, "dest": "/404" }
  ]
}
