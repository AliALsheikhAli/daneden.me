{
  "github": {
    "silent": true
  },
  "functions": {
    "pages/api/og.ts": {
      "includeFiles": "public/fonts/ogFonts/**"
    }
  },
  "routes": [
    {
      "src": "/api/og(.*)",
      "dest": "/api/og$1",
      "headers": {
        "Cache-Control": "max-age=31536000, public, stale-while-revalidate",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
      }
    },
    {
      "src": "/animate(.*)",
      "status": 308,
      "headers": { "Location": "https://animate.style/" }
    },
    {
      "src": "/toast(.*)",
      "status": 308,
      "headers": { "Location": "https://daneden.github.io/Toast/" }
    },
    {
      "src": "/images/favicon(.*)",
      "dest": "/images/favicon.png"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1",
      "headers": {
        "Cache-Control": "max-age=29030400, stale-while-revalidate"
      }
    },
    { "src": "/feed.xml", "dest": "/rss.xml" },

    {
      "src": "/fonts/(.*)",
      "dest": "/fonts/$1",
      "headers": {
        "Cache-Control": "public, max-age=29030400, stale-while-revalidate"
      }
    },
    {
      "src": "/((blog/)?([0-9]{4}/)([0-9]{1,2}/){1,2}(.*))",
      "status": 308,
      "headers": { "Location": "/blog/$3$5" }
    },
    { "src": "/(.*)", "dest": "/$1" },
    { "handle": "filesystem" },
    { "src": "/.*", "status": 404, "dest": "/404" }
  ]
}
