{
  "github": {
    "silent": true
  },
  "functions": {
    "pages/api/og.ts": {
      "includeFiles": "public/fonts/ogFonts/**"
    }
  },
  "headers": [
    {
      "source": "/api/og(.*)",
      "headers": {
        "Cache-Control": "max-age=31536000, public, stale-while-revalidate",
        "Access-Control-Allow-Origin": "*",
        "Access-Control-Allow-Methods": "GET",
        "Access-Control-Allow-Headers": "Origin, X-Requested-With, Content-Type, Accept, Authorization"
      }
    },
    {
      "source": "/api/image(.*)",
      "headers": {
        "Cache-Control": "max-age=31536000, public, stale-while-revalidate"
      }
    },
    {
      "source": "/uploads/(.*)",
      "headers": {
        "Cache-Control": "max-age=29030400, stale-while-revalidate"
      }
    },
    {
      "source": "/fonts/(.*)",
      "headers": {
        "Cache-Control": "public, max-age=29030400, stale-while-revalidate"
      }
    }
  ],
  "redirects": [
    {
      "source": "/animate(.*)",
      "permanent": true,
      "destination": "https://animate.style/"
    },
    {
      "source": "/toast(.*)",
      "permanent": true,
      "destination": "https://daneden.github.io/Toast/"
    },
    {
      "source": "/images/favicon(.*)",
      "destination": "/images/favicon.png"
    },
    {
      "source": "/((blog/)?([0-9]{4}/)([0-9]{1,2}/){1,2}(.*))",
      "permanent": true,
      "destination": "/blog/$3$5"
    }
  ]
}
